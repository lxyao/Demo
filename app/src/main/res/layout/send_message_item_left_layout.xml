<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white" >
    <TextView 
        android:id="@+id/send_message_item_left_tv_time"
        style="@style/send_message_item_time_style"
        android:text="16:14"/>
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="@color/white"
	    android:layout_marginTop="5dp"
	    android:layout_marginBottom="5dp" >
		
	    <com.yao.testdemo.chat.SpecialImageView
	        app:borderColor="@color/blue"
	        app:specialStyle="circle"
	        style="@style/send_message_item_head_style"
	        android:id="@+id/send_message_item_left_riv_head"
	        android:layout_marginLeft="10dp"/>
	    
	    <TextView 
	        android:id="@+id/send_message_item_left_tv_content"
	        style="@style/send_message_item_text_left_style"
	        android:text="鹏哥在吗？想问你一件事儿。能他妈不自恋吗呜呜呜呜呜呜呜"
	        android:layout_toRightOf="@id/send_message_item_left_riv_head"/>
	</RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:overScrollMode="never">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView 
            android:id="@+id/test_scrollview_slow_roll_up_other"
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:text="头部"
            android:gravity="center"
            /><!-- android:focusable="true"
            android:focusableInTouchMode="true" -->
        <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blue"/>
         <TextView 
            android:id="@+id/test_scrollview_slow_roll_up_id"
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:text="头部11"
            android:gravity="center"
            android:background="#ffeecc"/>
        
        <com.yao.testdemo.translateanimation.SolveScrollListView
            android:id="@+id/test_scrollview_slow_roll_up_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/emoji"/>
    </LinearLayout>

</ScrollView>
